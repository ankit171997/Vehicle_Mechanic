<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"

            android:id="@+id/vehicle_name1"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vehicle_name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vehicle_name"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>





    <LinearLayout
          android:weightSum="2"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">

          <TextView
              android:layout_weight="1"
              android:id="@+id/brand1"
              android:textColor="#F57F17"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="brand"
              android:textSize="20dp" />

          <TextView
              android:id="@+id/brand"
              android:textColor="#F57F17"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20dp" />


      </LinearLayout>

    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"

            android:id="@+id/model_no1"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="model_no"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/model_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"

            android:id="@+id/reg_no1"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reg_no"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reg_no"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>




    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"

            android:id="@+id/usage_km1"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usage_km"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/usage_km"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"

            android:id="@+id/purchase_year1"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="purchase_year"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/purchase_year"
            android:textColor="#F57F17"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#ff0000"
        />


    </LinearLayout>


