<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:id="@+id/vscroll3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"

        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"

                android:padding="8dp"
                android:weightSum="4">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/update"
                    android:paddingTop="5dp"
                    android:text="update"
                    android:textColor="#F57F17" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/mycar"
                    android:paddingTop="5dp"
                    android:text="My_Vehicles"
                    android:textColor="#F57F17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/location"
                    android:paddingTop="5dp"
                    android:text="nearby"
                    android:textColor="#F57F17" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/services"
                    android:paddingTop="5dp"
                    android:text="services"
                    android:textColor="#F57F17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal"

                android:padding="8dp">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/contact"
                    android:paddingTop="5dp"
                    android:text="contact us"
                    android:textColor="#F57F17" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/aboutus"
                    android:paddingTop="5dp"
                    android:text="info"
                    android:textColor="#F57F17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal"

                android:padding="8dp">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/feedback"
                    android:paddingTop="5dp"
                    android:text="feedback"
                    android:textColor="#F57F17" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/garage"
                    android:paddingTop="5dp"
                    android:text="Garages"
                    android:textColor="#F57F17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal"

                android:padding="8dp">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittextbackgroung"
                    android:drawableTop="@drawable/logout"
                    android:paddingTop="5dp"
                    android:text="LOGOUT"
                    android:textColor="#F57F17" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
